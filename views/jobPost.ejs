<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap/css/bootstrap.min.css">
    <link	rel="stylesheet" href="../css/jodit-3.18.4/build/jodit.min.css"/>
    <script src="../css/jodit-3.18.4/build/jodit.min.js"></script>
    <link rel="icon" href="../images/logoTitle.png" type="image/icon type">

    <title>Symetic Ing - Job Offer</title>
</head>
<body>


<%- include('partials/adminNav', {user: user, opt: 'jobPost'}); %>


    <div class="container" style="margin-top: 20px;">
        <form action="/admin-path" method="POST">

          <div class="row g-2" style="margin: 15px 0;" >
            <div class="col-md-7">
              <label for="companyName" class="form-label"><strong>Company Name</strong></label>
              <input type="text" name="companyName" class="form-control" aria-describedby="companyName">
            </div>

            <div class="col-md-5">
              <label for="title" class="form-label"><strong>Job Title</strong></label>
              <input type="text" name="title" class="form-control" aria-describedby="companyName">
            </div>

          </div>
            
            
            <div class="row g-1" style="margin-bottom: 10px;  padding: 0 15px;">


              <div class="col-md-12">
                <!-- <label for="location" class="form-label"><strong>Location</strong></label> -->
                <strong>Location:</strong><input type="text" name="location" class="form-control" aria-describedby="companyName">
              </div>

            </div>

            <div class="row g-4" style="margin-bottom: 10px;  padding: 0 15px;">

              <div class="col-md-3">
                <select name="category" class="form-select" aria-label="Default select example">
                  <option value="Energy" selected>Energy</option>
                  <option value="Environment">Environment</option>
                  <option value="IT">IT</option>
                  <option value="Industry">Civil Infrastructure</option>
                </select>
              </div>

           

              <div class="col-md-3">
                <strong>Date: </strong><input type="date" id="jobDate" name="Date">
              </div>
            
            </div>
  
          

            <div class="col-md-12">
              <textarea name="description" id="editor"></textarea>
            </div>
            

            
            <br>
            <button type="submit" class="btn btn-primary" style="margin: auto 0;">Submit</button>
        </form>
    </div>


    
    <script src="../css/bootstrap/js/bootstrap.min.js"></script>
    
    <script>
      const editor = Jodit.make('#editor');
    </script>
</body>
</html>